<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.model">
	
	<select id="listBoard" resultType="AlbumDBBean">
		select * from maven_board order by num desc
	</select>
  
  	<insert id="insertBoard" parameterType="AlbumDBBean">
  		insert into maven_board values(spring_board_seq.nextval, 
  		#{writer}, #{email}, #{subject}, #{passwd}, sysdate, 0, #{content}, #{ip}, #{filename})
  	</insert>
  	<select id="getBoard" resultType="AlbumDBBean" parameterType="int">
		select * from maven_board where num = #{num}
	</select>
	<delete id="deleteBoard" parameterType="int">
	delete from maven_board where num = #{num} 
	</delete>
	<update id="readcount" parameterType="int">
		update maven_board set readcount=readcount+1 where num=#{num}
	</update>  
	<update id="updateBoard" parameterType="AlbumDBBean">
	update maven_board set writer = #{writer}, email = #{email}, subject = #{subject}, content = #{content}, filename= #{filename}, filesize= #{filesize} where num = #{num} 
	</update>
</mapper>













